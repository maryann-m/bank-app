<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/margin12dp"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin12dp">

    <ImageView
        android:id="@+id/historyImage"
        android:background="@color/app_red"
        android:layout_height="31dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin12dp"
        android:layout_marginLeft="@dimen/margin12dp"
        app:layout_constraintTop_toTopOf="@id/tripAmount"
        app:layout_constraintBottom_toBottomOf="@id/tripdate"
        android:layout_width="31dp"


         />

    <TextView
        android:id="@+id/tripTitle"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:text="Paid Mara Serena"
        android:textColor="#6C6C6C"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/historyImage"
        app:layout_constraintStart_toEndOf="@+id/historyImage"
        app:layout_constraintTop_toTopOf="@id/historyImage" />

    <TextView
        android:id="@+id/tripdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="19 Mar 2021"
        android:textColor="#6C6C6C"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@id/tripAmount"
        app:layout_constraintTop_toBottomOf="@id/tripAmount" />

    <TextView
        android:id="@+id/tripAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin12dp"
        android:layout_marginRight="12dp"
        android:text="KSH 12,000"
        android:textColor="@color/app_red"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>