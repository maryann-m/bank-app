<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="110dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:id="@+id/livesafaribacground"
    android:layout_marginRight="15dp"
        android:layout_height="150dp"
        android:background="@drawable/redcharlie"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/liveicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:src="@drawable/ic_live_broadcasting"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/live_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAASAI MARA SPECIALS"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/margin12dp"
            android:layout_marginStart="@dimen/margin12dp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/liveicon"
            app:layout_constraintTop_toTopOf="@+id/liveicon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

